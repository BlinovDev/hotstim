<%= turbo_stream_from "chat_#{@chat.id}" %>

<div class="d-flex flex-column" style="height: 87vh;">
  <div id="messages"
       data-controller="chat"
       data-chat-current-user-id-value="<%= current_user.id %>"
       class="flex-grow-1 overflow-auto px-3 py-2">
    <%= render @messages %>
  </div>

  <div class="border-top p-2">
    <%= render partial: "messages/form", locals: { chat: @chat, message: @message } %>
  </div>
</div>
